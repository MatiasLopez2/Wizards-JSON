      "components": [
        {
          "order": 5,
          "name": "title",
          "componentType": "TEXT",
          "component": {
            "value": "Datos de cuenta"
          },
          "className": "text-center mb-4"
        },
        {
          "order": 10,
          "name": "email",
          "componentType": "FIELD",
