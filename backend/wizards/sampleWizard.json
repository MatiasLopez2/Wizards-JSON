{
  "name": "sampleWizard",
  "description": "Wizard de ejemplo (inputs + acci贸n remota + confirmaci贸n)",
  "initialStep": "userInfo",
  "actions": [
    {
      "name": "getUserProfile",
      "contentType": "JSON",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/users/{{userId}}",
      "headers": "{\"Accept\": \"application/json\"}",
      "expression": "name"
    }
  ],
  "steps": [
    {
      "name": "userInfo",
      "title": "Datos",
      "components": [
        {
          "name": "userIdInput",
          "type": "number",
          "label": "userId (1-10)",
          "bind": "userId"
        },
        {
          "name": "loadProfileBtn",
          "type": "button",
          "label": "Cargar perfil (remote action)",
          "actionName": "getUserProfile",
          "resultAssignTo": "profileName"
        }
      ],
      "nextStep": "confirm"
    },
    {
      "name": "confirm",
      "title": "Confirmaci贸n",
      "components": [
        {
          "name": "profileNameDisplay",
          "type": "display",
          "label": "Nombre devuelto por la acci贸n",
          "bind": "profileName"
        }
      ]
    }
  ]
}
